{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": ["es5", "dom"],
      "outDir": "./dist",
      "sourceMap": true,
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": [
      "**/*.ts"
    ],
    "exclude": [
      "./node_modules"
    ]
  }